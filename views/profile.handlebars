<div class="viewprofile">
    <img src="{{ppic}}" id="viewpic">
    <div class="profiledetails">
        <p>{{h_user}}</p>
        <p>Reviews: <span class="bold">{{numReviews}}</span></p>
    </div>

    <div class="profilemedia">
        <p id="vpTheReviews">TheReviews</p>
        <p id="vpAbout">About</p>
    </div>
</div>

{{#if blogs.length}}
    {{#each blogs}}
        {{! Calculate dynamicHeight in the server-side JavaScript and pass it to the template }}
        <div class="vpblog">
            <section>
                <img src="{{../ppic}}" class="blogpfp">
                {{log h_user}}
                <p>{{../fullname}}<span class="greyusername"> @{{../h_user}}</span></p>
            </section>
            <h3 class="title">{{this.restaurant}}</h3>
            <p class="snippet">{{this.snippet}}</p>
        </div>
    {{/each}}
{{else}}
    <p>There are no blogs to display</p>
{{/if}}

</div>
