<html>
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include('./partials/header.ejs')  %>
        <div class="viewprofile">
            <img src= <%=ppic%> id="viewpic">
            <div class="profiledetails">
                <p><%=h_user%></p>
                <p>Reviews: <span class="bold"><%=numReviews%></span></p>
            </div>

            <div class="profilemedia">
                <p id="vpTheReviews">TheReviews</p>
                <p id="vpAbout">About</p>
            </div>
        </div>
        <% var dynamicHeight = blogs.length * 150.8 %>
        <div class="profilecontent" style="height: <%= dynamicHeight %>px;">
            <% if (blogs.length > 0) { %>
                
                <% blogs.forEach(blog => { %>
                    <% dynamicHeight += 130 %>
                    <div class="vpblog">
                        <section>
                            <img src="<%= ppic%>" class="blogpfp">
                            <p><%= fullname %>
                            <span class="greyusername"> @<%=h_user%></span></p>
                            </section>
                        <h3 class="title"> <%= blog.restaurant %> </h3>
                        <p class="snippet"> <%= blog.snippet %> </p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>There are no blogs to display</p>
            <% } %>
            
        </div>
    </body>
</html>